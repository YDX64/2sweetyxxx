# ============================================
# 2SWEETY COOLIFY PRODUCTION ENVIRONMENT
# ============================================
# Bu dosya Coolify'da "Build Arguments" olarak yapıştırılacak
# Coolify Dashboard > Application > Environment Variables > Build Arguments
# ============================================

# ============================================
# GENEL AYARLAR
# ============================================
ESLINT_NO_DEV_ERRORS=true
GENERATE_SOURCEMAP=false
SKIP_PREFLIGHT_CHECK=true

# ============================================
# UYGULAMA BİLGİLERİ
# ============================================
REACT_APP_NAME=2Sweety
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=production

# ============================================
# API AYARLARI - BACKEND URL'LERİ
# ============================================
# ÖNEMLİ: Kendi backend API'nizi kullanıyorsanız buraya yazın
# Şimdilik test API kullanıyoruz
REACT_APP_API_BASE_URL=https://gomeet.cscodetech.cloud/api/
REACT_APP_IMAGE_BASE_URL=https://gomeet.cscodetech.cloud/
REACT_APP_PAYMENT_BASE_URL=https://gomeet.cscodetech.cloud/
REACT_APP_API_TIMEOUT=30000

# ============================================
# FIREBASE AYARLARI (2Sweety Projesi)
# ============================================
# Bu ayarlar client-side'da görünür, sorun değil
# Firebase Console'da domain kısıtlaması yapılmalı
REACT_APP_FIREBASE_API_KEY=AIzaSyDCZoLgY9bFxRcNFuV6IljwMVnnx0TL2to
REACT_APP_FIREBASE_AUTH_DOMAIN=sweet-a6718.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=sweet-a6718
REACT_APP_FIREBASE_STORAGE_BUCKET=sweet-a6718.firebasestorage.app
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=487435792097
REACT_APP_FIREBASE_APP_ID=1:487435792097:web:12907427892d53c82251a0
REACT_APP_FIREBASE_MEASUREMENT_ID=G-EQGMN8DYDP

# ============================================
# SOSYAL MEDYA GİRİŞLERİ (Opsiyonel)
# ============================================
# Google OAuth Client ID almak için:
# 1. https://console.cloud.google.com
# 2. APIs & Services > Credentials
# 3. Create OAuth 2.0 Client ID
# 4. Authorized redirect URI: https://2sweety.com
REACT_APP_GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com

# Facebook App ID almak için:
# 1. https://developers.facebook.com/apps
# 2. Create App > Consumer
# 3. Settings > Basic > App ID
# 4. Add domain: 2sweety.com
REACT_APP_FACEBOOK_APP_ID=your_facebook_app_id_here

# ============================================
# ÖDEME SİSTEMLERİ (Opsiyonel - İhtiyacınız olanları aktif edin)
# ============================================

# RAZORPAY (Hindistan)
# https://dashboard.razorpay.com/app/keys
# Test: rzp_test_xxxxx, Live: rzp_live_xxxxx
REACT_APP_RAZORPAY_KEY_ID=rzp_live_xxxxxxxxxx

# PAYPAL (Global)
# https://developer.paypal.com/dashboard/applications
# Sandbox için: sandbox, Production için: production
REACT_APP_PAYPAL_CLIENT_ID=your_paypal_client_id
REACT_APP_PAYPAL_MODE=production

# STRIPE (Global)
# https://dashboard.stripe.com/apikeys
# Test: pk_test_xxxxx, Live: pk_live_xxxxx
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_live_xxxxxxxxxxxxxxx

# ============================================
# PUSH BİLDİRİMLER - ONESIGNAL
# ============================================
# OneSignal hesabı oluşturmak için:
# 1. https://onesignal.com
# 2. New App/Website > Web Push
# 3. Site URL: https://2sweety.com
# 4. App ID'yi buraya yapıştır
REACT_APP_ONESIGNAL_APP_ID=94b2b6c5-fabb-4454-a2b7-75cf75b84789

# ============================================
# VİDEO/SES ARAMALARI - AGORA
# ============================================
# Agora hesabı oluşturmak için:
# 1. https://console.agora.io
# 2. Project Management > Create Project
# 3. App ID'yi buraya yapıştır
# ÖNEMLİ: Production'da App Certificate aktif edilmeli
REACT_APP_AGORA_APP_ID=your_agora_app_id_here

# ============================================
# HARİTALAR & KONUM
# ============================================
# Google Maps API Key almak için:
# 1. https://console.cloud.google.com
# 2. APIs & Services > Credentials
# 3. Create API Key
# 4. Kısıtlama: HTTP referrers, https://2sweety.com/*
REACT_APP_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
REACT_APP_DEFAULT_LATITUDE=37.7749
REACT_APP_DEFAULT_LONGITUDE=-122.4194

# ============================================
# UYGULAMA AYARLARI
# ============================================
REACT_APP_DEFAULT_LANGUAGE=en
REACT_APP_DEFAULT_CURRENCY=USD
REACT_APP_CURRENCY_SYMBOL=$

# Eşleşme Ayarları
REACT_APP_MAX_DISTANCE_KM=50000
REACT_APP_MIN_AGE=18
REACT_APP_MAX_AGE=100

# Özellikler (true/false)
REACT_APP_ENABLE_VIDEO_CALL=true
REACT_APP_ENABLE_VOICE_CALL=true
REACT_APP_ENABLE_GIFT_SENDING=true
REACT_APP_ENABLE_PREMIUM_FEATURES=true

# Görsel Yükleme
REACT_APP_MAX_IMAGE_SIZE=5242880
REACT_APP_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/jpg,image/webp
REACT_APP_MAX_IMAGES_PER_PROFILE=6

# ============================================
# PRODUCTION AYARLARI
# ============================================
REACT_APP_DEBUG_MODE=false
REACT_APP_SHOW_API_LOGS=false
REACT_APP_ENABLE_ANALYTICS=true
